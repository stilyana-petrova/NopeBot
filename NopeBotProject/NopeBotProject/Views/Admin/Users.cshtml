@model IEnumerable<NopeBotProject.Infrastructure.Data.Entities.ApplicationUser>
@{
    ViewData["Title"] = "Users";
}
<h2>All Users</h2>

<table class="table">
    <tr>
        <th>Email</th>
        <th>Username</th>
        <th>Actions</th>
    </tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Email</td>
            <td>@user.UserName</td>
            <td>
                <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post" onsubmit="return confirm('Delete this user?');">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </td>
        </tr>
    }
</table>